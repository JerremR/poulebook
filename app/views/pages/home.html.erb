<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1522243415254-248420bef151?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80);">
  <div class="container">
    <h1>Poulebook</h1>
    <p>
      <span id="banner-typed-text"></span>
    </p>
    <%= form_tag chickens_path, method: :get do %>
      <div class="search-form-control form-group poule-search home-search">
        <%= text_field_tag :query,
          params[:query],
          class: "form-control string required poule-search-input",
          id: "search_query",
          placeholder: "Trouvez votre poule ici !"
        %>
        <%= submit_tag "Search", class: "btn btn-flat" do %>
          <i class="fas fa-search"></i> Search
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<h2 class="h2-home-page mb-4">Poule Position üèÜ</h2>

<div class="container container-chicken">
  <% last_chickens = Chicken.all %>
  <div class="row">
    <% last_chickens.each do |chicken| %>
     <div class="col col-md-6 col-lg-3">
      <%= render partial: 'shared/chicken_card', locals: {chicken: chicken} %>
      </div>
    <% end %>
  </div>
</div>
