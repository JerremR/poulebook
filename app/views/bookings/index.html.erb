<div class="container">
  <h1>My bookings</h1>
  <% if @bookings.empty? %>
    <p>No booking for now.</p>
  <% else %>
    <div class="bookings">
      <p>Her is the list of my <%= @bookings.count %> bookings</p>
      <table>
        <tr>
          <th>chicken photo</th>
          <th>chicken name</th>
          <th>start_date</th>
          <th>end_date</th>
          <th>total_price</th>
<!--       <th>user</th>
          <th>user avatar</th> -->
          <th>Owner name</th>
          <th>Owner photo</th>
          <th>Status</th>
        </tr>
      <% @bookings.each do |booking| %>
        <tr>
          <td><%= cl_image_tag(booking.chicken.photo, width: 150) %></td>
          <td><%= booking.chicken.name %></td>
          <td><%= booking.start_date %></td>
          <td><%= booking.end_date %></td>
          <td><%= booking.total_price %></td>
          <%#= booking.user.fullname %>
          <%#= cl_image_tag(booking.user.avatar, width: 150, height: 150, crop: :thumb, gravity: :face) %>
          <td><%= booking.chicken.owner.fullname %></td>
          <td><%= cl_image_tag(booking.chicken.owner.avatar, width: 100, height: 100, crop: :thumb, gravity: :face) %></td>
          <td>Status: <%= booking.status %></td>
        </tr>
      <% end %>
      </table>
    </div>
  <% end %>
</div>
