<div class="container">
  <h1>ALL bookings</h1>
  <% if @bookings.empty? %>
    <p class="text-center">No booking for now.</p>
    <p class="text-center mt-5 mb-5"><%= image_tag "nobookingyet.gif" %></p>
  <% else %>
    <div class="bookings">
      <p>Her is the list of ALL <%= @bookings.count %> bookings</p>
      <table>
        <tr>
          <th>chicken photo</th>
          <th>chicken name</th>
          <th>start_date</th>
          <th>end_date</th>
          <th>total_price</th>
          <th>user avatar</th>
          <th>user</th>
<!--           <th>Owner name</th>
          <th>Owner photo</th> -->
          <th>Status</th>
          <th>update</th>
        </tr>
      <% @bookings.each do |booking| %>
        <tr>
          <td><%= cl_image_tag(booking.chicken.photo, width: 150) %></td>
          <td><%= booking.chicken.name %></td>
          <td><%= booking.start_date %></td>
          <td><%= booking.end_date %></td>
          <td><%= booking.total_price %></td>
          <td><%= cl_image_tag(booking.user.avatar, width: 100, height: 100, crop: :thumb, gravity: :face) %></td>
          <td><%= booking.user.fullname %></td>
          <%#= booking.chicken.owner.fullname %>
          <%#= cl_image_tag(booking.chicken.owner.avatar, width: 100, height: 100, crop: :thumb, gravity: :face) %>
          <td>Status: <%= booking.status %></td>
          <td>
            <% if booking.status == 'En attente' %>
              <%= link_to decline_owner_booking_path(booking), method: :patch do %> <i class="fa fa-times-circle text-danger" aria-hidden="true"></i><% end %>
              <%= link_to accept_owner_booking_path(booking), method: :patch do %> <i class="fa fa-check-circle text-success" aria-hidden="true"></i><% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
      </table>
    </div>
  <% end %>
</div>
