<div class="container">
  <div class="d-flex justify-content-between">
    <h1>Mon poulailler</h1>
    <%= link_to "Ajoute ta poule", new_owner_chicken_path, class: "w-25 btn button-primary mb-4" %>
  </div>
    <% if @chickens.empty? %>
    <p class="text-center">Pas de poule ni de coq pour le moment.</p>
    <p class="text-center mt-5 mb-5"><%= image_tag "nochickenyet.gif" %></p>
  <% else %>
    <div class="row">
    <% @chickens.each do |chicken| %>
      <div class="col col-md-4">
        <%= render partial: 'shared/chicken_card', locals: {chicken: chicken} %>
      </div>
    <% end %>
    </div>
  <% end %>
</div>
