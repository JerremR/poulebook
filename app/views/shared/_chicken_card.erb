<div class="card-chicken">
  <%= link_to chicken_path(chicken) do %>
    <%= cl_image_tag(chicken.photo, class: 'chicken-photo')%>
    <div class="card-chicken-infos">
      <div>
        <h2><%= chicken.name %></h2>
        <p class="card-species"><%= chicken.species %></p>
      </div>
      <% price_integer = chicken.price.to_i %>
      <% price_decimal = (chicken.price.modulo(1)*100).to_i %>
      <span class="card-chicken-pricing"><%= price_integer %>â‚¬<sup><%= price_decimal %></sup></span>
      <%= cl_image_tag(chicken.owner.avatar, class:"card-chicken-owner avatar-bordered", width: 40, height: 40, crop: :thumb, gravity: :face) %>
    </div>
  <% end %>
</div>
