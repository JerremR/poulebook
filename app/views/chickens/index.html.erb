<h1>All the Chickens</h1>
<% if @chickens.empty? %>
  <p>No chicken created for now</p>
<% else %>
  <div class="row">
  <% @chickens.each do |chicken| %>
    <div class="col">
      <h2><%= link_to chicken.name, chicken_path(chicken) %></h2>
      <div class="row">
        <div class="col-3">
          <%= cl_image_tag(chicken.owner.avatar, class:'card-trip-user avatar-bordered') %>
        </div>
        <div class="col-9">
          Owner: <%= chicken.owner.fullname %></p>
        </div>
      </div>
      <p>BirthDate: <%= chicken.birthdate %></p>
      <p>Color: <%= chicken.color %></p>
      <p>Species: <%= chicken.species %></p>
      <p>Gender: <%= chicken.gender %></p>
      <p>Price: <%= chicken.price %> â‚¬ per day</p>
      <p>Photo: <%= cl_image_tag(chicken.photo) %></p>
      <p>Presentation: <%= chicken.presentation %></p>
      <p>Address: <%= chicken.address %></p>
    </div>
  <% end %>
  </div>
<% end %>
